{
  "name": "smartcard",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "lint:strict": "next lint --max-warnings=0",
    "type-check": "tsc --noEmit",
    "validate": "pnpm lint && pnpm type-check && pnpm build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "db:create": "createdb smartcard7 || true",
    "db:reset": "dropdb smartcard7 --if-exists && createdb smartcard7",
    "db:status": "pg_isready -d smartcard7 || true",
    "db:shell": "psql smartcard7",
    "check:health": "curl -s http://localhost:3000/api/health | jq . || echo 'Instale o jq para melhor formatação: sudo apt install jq'"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "9.x"
  },
  "dependencies": {
    "@auth/pg-adapter": "^1.10.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@opentelemetry/api": "^1.9.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "@visx/responsive": "^3.12.0",
    "@visx/xychart": "^3.12.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3-time-format": "^4.1.0",
    "date-fns": "^4.1.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.542.0",
    "next": "14.2.32",
    "next-auth": "^4.24.5",
    "pg": "^8.11.3",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^5.0.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.44.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.32",
    "jsdom": "^24.1.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  }
}
